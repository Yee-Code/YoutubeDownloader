<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:YoutubeDownloader.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="YoutubeDownloader.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="YouTube Downloader"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Margin="20">
            <!-- Header -->
            <TextBlock Grid.Row="0" Text="YouTube Downloader" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,30,0,20"
                       Foreground="White"/>

            <!-- Input Area -->
            <StackPanel Grid.Row="1" Spacing="10">
                <TextBox Watermark="Enter YouTube URL here..." 
                         Text="{Binding VideoUrl}"
                         IsEnabled="{Binding !IsDownloading}"
                         Classes="clearButton"
                         Height="40"
                         VerticalContentAlignment="Center"/>
                
                <Button Content="Download" 
                        Command="{Binding DownloadCommand}"
                        IsEnabled="{Binding !IsDownloading}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Height="40"
                        Background="#CCFF0000"
                        Foreground="White"
                        FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Status & Progress -->
            <StackPanel Grid.Row="2" Margin="0,20,0,10" Spacing="5">
                <TextBlock Text="{Binding StatusMessage}" 
                           HorizontalAlignment="Center"
                           Foreground="#DDFFFFFF"/>
                
                <ProgressBar IsIndeterminate="{Binding IsDownloading}" 
                             IsVisible="{Binding IsDownloading}"
                             Height="4"/>
            </StackPanel>

            <!-- Log Output -->
            <Border Grid.Row="3" 
                    Background="#22000000" 
                    CornerRadius="5" 
                    BorderBrush="#33FFFFFF" 
                    BorderThickness="1"
                    Padding="10">
                <ScrollViewer>
                    <TextBlock Text="{Binding LogOutput}" 
                               FontFamily="Consolas, monospace"
                               Foreground="#AAAAAA"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
            
            <!-- Footer -->
             <TextBlock Grid.Row="4" Text="Powered by yt-dlp" 
                       FontSize="10" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"
                       Foreground="#55FFFFFF"/>

        </Grid>
    </Panel>

</Window>
