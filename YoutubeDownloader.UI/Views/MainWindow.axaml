<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:YoutubeDownloader.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="YoutubeDownloader.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="YouTube Downloader"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        WindowStartupLocation="Manual"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        Icon="/App.ico"
        ExtendClientAreaToDecorationsHint="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenu>
                    <NativeMenuItem Header="Open" Gesture="Cmd+O"/>
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Edit">
                <NativeMenu>
                    <NativeMenuItem Header="Undo" Gesture="Cmd+Z"/>
                    <NativeMenuItem Header="Redo" Gesture="Cmd+Shift+Z"/>
                    <NativeMenuItemSeparator/>
                    <NativeMenuItem Header="Cut" Gesture="Cmd+X"/>
                    <NativeMenuItem Header="Copy" Gesture="Cmd+C"/>
                    <NativeMenuItem Header="Paste" Gesture="Cmd+V"/>
                    <NativeMenuItem Header="Select All" Gesture="Cmd+A"/>
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Margin="20">
            <!-- Header -->
            <TextBlock Grid.Row="0" Text="YouTube Downloader" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,30,0,20"
                       Foreground="White"/>

            <!-- Input Area -->
            <StackPanel Grid.Row="1" Spacing="10">
                <TextBox Watermark="Enter YouTube URL here..." 
                         Text="{Binding VideoUrl}"
                         IsEnabled="{Binding !IsDownloading}"
                         Classes="clearButton"
                         Height="40"
                         VerticalContentAlignment="Center"/>
                
                <Grid ColumnDefinitions="*, Auto" Margin="0,5">
                    <TextBox Grid.Column="0" Watermark="Output Path (Default: Downloads)" 
                             Text="{Binding DownloadPath}"
                             IsEnabled="{Binding !IsDownloading}"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="..." 
                            Command="{Binding BrowseCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                            IsEnabled="{Binding !IsDownloading}"
                            Height="40" Width="40"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"/>
                </Grid>

                <Button Content="Download" 
                        Command="{Binding DownloadCommand}"
                        IsEnabled="{Binding !IsDownloading}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Height="40"
                        Background="#CCFF0000"
                        Foreground="White"
                        FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Status & Progress -->
            <StackPanel Grid.Row="2" Margin="0,20,0,10" Spacing="5">
                <ProgressBar Value="{Binding ProgressValue}"
                             Maximum="100"
                             ShowProgressText="True"
                             IsVisible="{Binding IsDownloading}"
                             Height="20"/>
                <TextBlock Text="{Binding EstimatedTimeRemaining}"
                           IsVisible="{Binding IsDownloading}"
                           Foreground="#DDFFFFFF"
                           FontSize="12"/>
            </StackPanel>

            <!-- Log Output -->
            <Border Grid.Row="3" 
                    Background="#22000000" 
                    CornerRadius="5" 
                    BorderBrush="#33FFFFFF" 
                    BorderThickness="1"
                    Padding="10">
                <ScrollViewer>
                    <TextBlock Text="{Binding LogOutput}" 
                               FontFamily="Consolas, monospace"
                               Foreground="#AAAAAA"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
            
            <!-- Footer -->
             <TextBlock Grid.Row="4" Text="Powered by yt-dlp" 
                       FontSize="10" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"
                       Foreground="#55FFFFFF"/>

        </Grid>
    </Panel>

</Window>
